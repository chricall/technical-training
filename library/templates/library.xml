<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="index">
        <t t-call="website.layout">
            <title>Library</title>
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <form action="/academy/test/rent" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="text" class="form-control" name="email" />
                            </div>
                            <p><strong>Select the books:</strong></p>
                            <t t-foreach="books" t-as="book">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" t-att-name="'book-%s' % book.id "/>
                                    <label class="form-check-label"><t t-esc="book.name"/></label>
                                </div>
                            </t>
                            <input type="submit" class="btn btn-primary mt-4" value="SEND"/>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <template id="confirmation">
        <title>Booking confirmation</title>
        <h1>Thank you for your booking!</h1>
        <p>Don't forget to get it back!</p>
    </template>
</odoo>